<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="macros_inercia.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- LINK BASE -->

    <link name ="base_link">
    
    </link>

    <!-- LINK DEL CHASIS -->

    <joint name = "joint_chasis" type ="fixed">
        <parent link ="base_link"/>
        <child link ="chasis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name ="chasis">
        <visual>
            <origin xyz ="0.15 0 0.075"/>
            <geometry>
                <box size ="0.3 0.3 0.15"/>
            </geometry>
            <material name ="white"/>
        </visual>
        <collision>
            <origin xyz ="0.15 0 0.075"/>
            <geometry>
                <box size ="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inercia_caja masa="1.0" largo="0.3" ancho="0.3" altura="0.15">
            <origin xyz="0.15 0 0.075" rpy ="0 0 0"/>
        </xacro:inercia_caja>
    </link>

    <gazebo reference="chasis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LINK RUEDA IZQUIERDA -->

    <joint name = "joint_roda_esquerra" type = "continuous">
        <parent link="base_link"/>
        <child link="roda_esquerra"/>
        <origin xyz="0 0.175 0" rpy ="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    
    </joint>

    <link name = "roda_esquerra">
        <visual>
            <geometry>
                <cylinder radius = "0.05" length="0.04"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inercia_cilindro masa="0.1" largo="0.04" radio="0.05">
            <origin xyz="0 0 0" rpy ="0 0 0"/>
        </xacro:inercia_cilindro>
    </link>

    <gazebo reference="roda_esquerra">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- LINK RUEDA DERECHA -->

    <joint name = "joint_roda_dreta" type = "continuous">
        <parent link="base_link"/>
        <child link="roda_dreta"/>
        <origin xyz="0 -0.175 0" rpy ="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    
    </joint>

    <link name = "roda_dreta">
        <visual>
            <geometry>
                <cylinder radius = "0.05" length="0.04"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inercia_cilindro masa="0.1" largo="0.04" radio="0.05">
            <origin xyz="0 0 0" rpy ="0 0 0"/>
        </xacro:inercia_cilindro>
    </link>

    <gazebo reference="roda_dreta">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- LINK RUEDA MÃ“VIL -->

    <joint name="joint_roda_mobil" type="fixed">
        <parent link="chasis"/>
        <child link="roda_mobil"/>
        <origin xyz="0.24 0 0"/>
    </joint>

    <link name="roda_mobil">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inercia_esfera masa="0.1" radio="0.05">
            <origin xyz="0 0 0" rpy ="0 0 0"/>
        </xacro:inercia_esfera>
    </link>

    <gazebo reference="roda_mobil">
        <material>Gazebo/Black</material>
    </gazebo>
</robot>